@model List<modulo10proyectofinal.Models.Pais>

<h2 class="mb-4">Lista de Países</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle"></i> Agregar País
</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pais in Model)
        {
            <tr>
                <td>@pais.Nombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@pais.Id" class="btn btn-warning btn-sm me-1">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@pais.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
