@model List<modulo10proyectofinal.Models.Empleado>

<h2 class="mb-4">Lista de Empleados</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle"></i> Agregar Empleado
</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>País</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Nombre</td>
                <td>@emp.Apellido</td>
                <td>@emp.Email</td>
                <td>@emp.Telefono</td>
                <td>@emp.PaisNombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-warning btn-sm me-1">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
